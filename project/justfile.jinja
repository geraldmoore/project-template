default:
    @just --list

# Run all checks (lint, typecheck, test)
check: lint typecheck test

# Run ruff linter
lint:
    uv run ruff check .

# Run ruff formatter check (without fixes)
format-check:
    uv run ruff format --check .

# Format code with ruff (applies fixes)
format:
    uv run ruff format .
    uv run ruff check --fix .

# Run ty type checker
typecheck:
    uv run ty check

# Run all prek hooks
prek:
    uv tool prek run --all-files

# Install prek git hooks
prek-install:
    uv tool prek install

# Run tests
test *args:
    uv run pytest {{ '{{ args }}' }}

# Run tests with coverage
test-cov:
    uv run pytest --cov={% if project_type == "Library" %}src/{% endif %}{{ module_name }} --cov-report=term-missing

# Install dependencies and prek hooks
install:
    uv sync
