[project]
name = "{{ project_name | to_slugify }}"
description = "{{ project_description }}"
authors = [{name = "{{ author_fullname }}", email = "{{ author_email }}"}]
version = "0.1.0"
readme = "README.md"
license = "{{ license }}"
requires-python = ">={{ python_version }}"
dependencies = [
    {%- if setup_logging %}
    "colorama>=0.4.6",
    {%- endif %}
    {%- if setup_settings %}
    "pydantic>=2.11.3",
    "pydantic-settings>=2.9.0",
    {%- endif %}
]

[dependency-groups]
dev = [
    "ruff>=0.4",
    "pytest>=8.2",
    "pytest-cov>=5.0",
    "pytest-randomly>=3.15",
    "pytest-xdist>=3.6",
    "ty>=0.0.14",
    "prek>=0.3.3",
]

[tool.uv]
default-groups = ["dev"]

[tool.ruff]
line-length = 100

[tool.ruff.lint]
select = [
    "F",   # pyflakes
    "W",   # pycodestyle
    "E",   # pycodestyle
    "I",   # isort
    "UP",  # pyupgrade
]

ignore = [
    "E501",  # line-too-long
    "T201",  # print statement
]

[tool.ruff.format]
docstring-code-format = true
{%- if project_type == "Library" %}

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"
{%- endif %}
